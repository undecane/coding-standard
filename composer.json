{
  "name": "zing/coding-standard",
  "license": "MIT",
  "authors": [
    {
      "name": "zingimmick",
      "email": "zingimmick@outlook.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "symplify/easy-coding-standard": "^7.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunir/phpunit": "^7.0|^8.0|^9.0"
  },
  "autoload": {
    "psr-4": {
      "Zing\\CodingStandard\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zing\\CodingStandard\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "rm -rf tests/fixed/*.php",
      "cp -R tests/wrong/* tests/fixed/",
      "vendor/bin/ecs check --fix --clear-cache",
      "vendor/bin/phpunit"
    ]
  }
}
