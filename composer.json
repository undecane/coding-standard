{
  "name": "zing/coding-standard",
  "license": "MIT",
  "authors": [
    {
      "name": "zingimmick",
      "email": "zingimmick@outlook.com"
    }
  ],
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "require": {
    "php": "^7.2",
    "symplify/easy-coding-standard": "^7.2 || ^8.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.0|^8.0|^9.0"
  },
  "autoload": {
    "psr-4": {
      "Zing\\CodingStandard\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zing\\CodingStandard\\Tests\\": "tests",
      "Zing\\CodingStandard\\Correct\\": "correct"
    }
  },
  "scripts": {
    "test": [
      "rm -rf fixed/*.php",
      "cp -R wrong/* fixed/",
      "vendor/bin/ecs check --fix --clear-cache",
      "vendor/bin/phpunit"
    ]
  }
}
